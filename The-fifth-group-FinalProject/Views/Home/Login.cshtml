@section Styles{	
<style>  
    .login {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 300px;
    padding: 20px;
    background-color: #f2f2f2;
    border: 1px solid #ccc;
    }   
</style>	
}
<div id="app">
    <div class="login">
        <h2>登入</h2>
        <form>
            <label class="form-label">帳號:</label>
			<input type="text" class="form-control" v-model="account" />
            <br>
            <label class="form-label">密碼:</label>
                <input type="text" class="form-control" v-model="password" />
            <br>
            <button type="button" class="btn btn-warning" @@click="close">關閉</button>
            <button type="button" class="btn btn-primary" @@click="login">登入</button>
        </form>
    </div> 
</div>

@section Scripts
	{
	<script src="https://unpkg.com/vue@3.2.29/dist/vue.global.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.3.3/axios.min.js"></script>
	<script>
		var webApiBaseAddress = "https://localhost:7040";
		var vueApp = {
			data() {
				return {
					account:"",
					password:"",
				};
			},
			mounted: function () {
				let _this = this;
				_this.checkingLogin();
			},
			methods: {
				checkingLogin:function(){
					
				},
				login:function(){
					let _this = this;
					var request = {};
					request.Account = _this.account;
					request.Password = _this.password;
					axios.post(`${webApiBaseAddress}/api/Members/MemberLogin`, request).then(response => {
					alert(response.data);
					window.location = "/home/Index";
				    });
				},				
				
				close: function () {
					history.back()
				},
			},
		};
		var app = Vue.createApp(vueApp).mount("#app");
	</script>
}
