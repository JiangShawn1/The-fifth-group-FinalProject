@model IEnumerable<The_fifth_group_FinalProject.Models.ForumSectionBranch>

@section Styles
{
	<style>
		.row align-items-start {
			border: 2em;
		}

		.modal-header
		{
			text-align:center;
			display: inline;
		
		}

		.pac{
			display:inline-block;
			width:200px;
		}

		.container-fluid{
			display: flex;
			flex-wrap:wrap;

		}
		.bb{
			width:200px;
			display:inline;
		}
		#forumApp div{
			text-align: center;	
		}		
	</style>
}
<div class="container-fluid d-flex " id="forumApp">
	<div  class="pac">
		<div class="modal-header ">
		新手上路

		</div class="bb">
		@foreach (var item in Model)
		{	
		@if (item.SectionNameId == 1)
		{
		<div>
				<a href='https://localhost:7123/ForumSectionBranch1Topic/Index' +'>@Html.DisplayFor(modelItem => item.BranchName)</a>
		</div>
		}
	}
	</div>
	
	<div class="pac">
	<div class="modal-header">
	運動賽事	
	</div>

	@foreach (var item in Model)
	{
		@if (item.SectionNameId == 2)
		{
			<div>
				<a href="https://localhost:7123/ForumSectionBranch1Topic/Index">@Html.DisplayFor(modelItem => item.BranchName)</a>
			</div>
		}
	}
	</div>

	<div class="pac">
	<div class="modal-header ">
	心得分享			
	</div>

	@foreach (var item in Model)
	{
		@if (item.SectionNameId == 3)
		{
			<div>
				<a id="topicurl" href="https://localhost:7123/ForumSectionBranch1Topic/Index">@Html.DisplayFor(modelItem => item.BranchName)</a>
			</div>
		}
	}
	</div>

	<div class="pac">
	<div class="modal-header ">
		版務
	</div>
	@foreach (var item in Model)
	{
		@if (item.SectionNameId == 4)
		{
			<div>
				<a href="https://localhost:7123/ForumSectionBranch1Topic/Index">@Html.DisplayFor(modelItem => item.BranchName)</a>
			</div>
		}
	}
	</div>
</div>

