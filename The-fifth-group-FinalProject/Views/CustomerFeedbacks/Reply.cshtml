@model The_fifth_group_FinalProject.Models.CustomerFeedback

@{
    ViewData["Title"] = "Reply";
    var email = ViewBag.email;
    var FeedbackContent = ViewBag.FeedbackContent;
    var CreateTime = ViewBag.CreateTime;
    var CustomerName = ViewBag.CustomerName;
    string defaultReply = $"{CustomerName}您好，您於{CreateTime}來信提到，{FeedbackContent}";
}

<h1>Reply</h1>

<div>
    <h4>CustomerFeedback</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FeedbackContent)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FeedbackContent)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CustomerName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreateTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreateTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.QuestionType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuestionType.QuestionType1)
        </dd>
    </dl>
    <div>
        <form method="post" action="/CustomerFeedbacks/SentEmail">
            <label>信箱</label><input type="text" id="emailTo" name="emailTo" value="@email" />

            <br />
            <label>主旨</label><input type="text" id="emailSubject" name="emailSubject" />
            <br />
            <label>內容</label><textarea rows="4" cols="50" id="emailBody" name="emailBody" value="FeedbackContent">@defaultReply</textarea>
            <button type="submit">寄出</button>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">回到清單</a>
</div>
