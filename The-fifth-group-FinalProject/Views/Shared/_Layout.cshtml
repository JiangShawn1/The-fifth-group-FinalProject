<!DOCTYPE html>
<style>
    #app {
        margin: 20px auto;
        max-width: 1800px;
        margin-left: 200px; 
        margin-right: 200px;   
    }
</style>
<html lang="en">
<head>
    <title>跑者資訊站</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/css/styles.css" rel="stylesheet" />
</head>

<body class="d-flex flex-column min-vh-100">
    <main class="flex-shrink-0 flex-grow-1 pb-3">
        <header class="bg-dark text-white py-3">
            <div class="container">
                <div class="row">
                    <div class="col"> <h1>運動網</h1></div>
                    <div class="col-md-auto"><a id="log" href="/Home/Login">登入</a></div>
                </div>
            </div>
        </header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" href="https://localhost:7123/">首頁</a>
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarNav"
                        aria-controls="navbarNav"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/contest/ContestIndex">賽事資訊</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Registration/RegistrationIndex">報名表</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/products/index">商城</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">論壇</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/CustomerService/Index">客服</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        @RenderBody()
        @RenderSection("scripts", required: false)
        @RenderSection("Styles", required: false)
    </main>
    <!-- Footer-->
    <footer class="bg-dark text-white py-2 mt-auto">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-4">
                    <h3 class="mb-3">聯絡我們</h3>
                    <p>電子郵件：<a href="mailto:contact@runners.com.tw" class="text-white">contact@runners.com.tw</a></p>
                    <p>電話：<a href="tel:+886-2-1234-5678" class="text-white">+886-2-1234-5678</a></p>
                    <p>地址：台北市中正區忠孝西路一段1號</p>
                </div>
                <div class="col-md-4">
                    <h3 class="mb-3">社群媒體</h3>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white">Facebook</a></li>
                        <li><a href="#" class="text-white">Instagram</a></li>
                        <li><a href="#" class="text-white">Twitter</a></li>
                        <li><a href="#" class="text-white">YouTube</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h3 class="mb-3">訂閱電子報</h3>
                    <form>
                        <div class="form-group">
                            <label for="email" class="sr-only">電子郵件地址</label>
                            <div class="input-group">
                                <input type="email" class="form-control" id="email" placeholder="輸入您的電子郵件" required>
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-primary">訂閱</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </footer>   
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/js-cookie/3.0.1/js.cookie.min.js"></script>
    <!-- Core theme JS-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/scripts.js"></script>
    <script>
        // 檢查用戶是否已經登入
        if (isLoggedIn()) {
            // 如果已經登入，將“登入”按鈕更改為“登出”
            var loginLink = document.querySelector('#log');
            loginLink.innerHTML = '登出';
            loginLink.setAttribute('href', '/Home/logout');
        }
        function isLoggedIn() {
            let memberId = Cookies.get('MemberId');
            return memberId > 0 ? true : false;            
        }      
    </script>
</body>
</html>
